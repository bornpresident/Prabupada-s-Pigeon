{
  "manifest_version": 2,
  "name": "ISKCON WhatsApp Message Sender",
  "version": "1.0.0",
  "description": "Send personalized Hare Krishna messages from Excel with configurable delay",
  "permissions": [
    "storage","tabs",
    "*://web.whatsapp.com/*"
  ],
  "browser_action": {
    "default_title": "ISKCON WhatsApp Sender",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
